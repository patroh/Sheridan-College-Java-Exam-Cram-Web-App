<%- include('includes/head.ejs') %>
<link href="/css/main.css" rel="stylesheet" type="text/css"/>
<link href="/css/dashboard.css" rel="stylesheet" type="text/css"/>
</head>
<body class="login-body">
<%- include('includes/flashMessage.ejs') %>

<div class="container py-5">
    <div class="py-5 text-center">
        <h2>Java Exam Cram Login</h2>
    </div>
    <form method="post" action="/register">
        <div class="row justify-content-md-center">
            <div class="col-12 col-md-6">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="firstName">First name</label>
                        <input type="text" class="form-control" id="firstName" name="firstName" required>
                        <div class="invalid-feedback">
                            Valid first name is required.
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="lastName">Last name</label>
                        <input type="text" class="form-control" id="lastName" name="lastName" required>
                        <div class="invalid-feedback">
                            Valid last name is required.
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="studentID">Student ID</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">#</span>
                        </div>
                        <input type="text" class="form-control" name="studentID" placeholder="Student ID" required>
                        <div class="invalid-feedback" style="width: 100%;">
                            Your Student ID is required.
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label for="campus">Campus</label>
                        <select class="custom-select d-block w-100" name="campus" required>
                            <option value="">Choose...</option>
                            <option value="davis">Davis</option>
                            <option value="trafalgar">Trafalger</option>
                        </select>
                        <div class="invalid-feedback">
                            Please select a valid campus.
                        </div>
                    </div>
                </div>
                    <input type="password" class="form-control" name="password" placeholder="Exam cram password" required>

                <hr class="mb-2">
                <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
                <center><a class="nav-link text-white" href="/admin">Click here for admin login</a></center>
            </div>
        </div>
    </form>
</div>

<%- include('includes/end.ejs') %>